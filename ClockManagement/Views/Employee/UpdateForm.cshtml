@{
  Layout = "_Layout";
}
<hr />
<h2>Edit item: @Model["employee"].name</h2>
<form action="/employees/@Model["employee"].id/update" method="post">
    <label for="newName">Name:</label>
    <input type="text" name="newName" value="@Model["employee"].name">
    <label for="newUserName">Username:</label>
    <input type="text" name="newUserName" value="@Model["employee"].username">
    <label for="newUserPassword">Password:</label>
    <input type="text" name="newUserPassword" value="@Model["employee"].password">


    <select name="newDepartmentId">
      @foreach (var department in @Model["allDepartments"])
      {
        <option value=@department.id>@department.name</option>
      }
    </select>
    <button type="submit">Edit</button>
</form>

<h4><a href="/">Return home</a></h4>
